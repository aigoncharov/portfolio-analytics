{
  "compilerOptions": {
    "alwaysStrict": true,
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "target": "ES2015",
    "baseUrl": "./",
    "moduleResolution": "node",
    "declaration": true,
    "removeComments": true,
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true
  },
  "include": ["./**/*.ts"]
}
